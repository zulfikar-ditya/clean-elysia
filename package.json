{
	"name": "elysia-clean",
	"author": {
		"name": "Fexend"
	},
	"version": "1.0.0",
	"scripts": {
		"start:server": "bun run apps/apis/serve.ts",
		"dev:server": "bun run --hot --watch apps/apis/serve.ts",
		"build:server": "bun build apps/apis/serve.ts --outdir=dist --target=node",
		"start:worker": "bun run apps/worker/index.ts",
		"dev:worker": "bun run --hot --watch apps/worker/index.ts",
		"build:worker": "bun build apps/worker/index.ts --outdir=dist --target=node",
		"start:api": "bun run apps/apis/serve.ts",
		"dev:api": "bun run --hot --watch apps/apis/serve.ts",
		"build:api": "bun build apps/apis/serve.ts --outdir=dist --target=node",
		"lint": "bun run eslint . --ext .ts,.js",
		"format": "bun run prettier --write .",
		"prepare": "husky",
		"dev:all": "concurrently --names \"server,worker\" --prefix-colors \"blue,magenta\" \"bun run dev:server\" \"bun run dev:worker\"",
		"build:all": "concurrently --names \"server,worker\" --prefix-colors \"blue,magenta\" \"bun run build:server\" \"bun run build:worker\"",
		"start:all": "concurrently --names \"server,worker\" --prefix-colors \"blue,magenta\" \"bun run start:server\" \"bun run start:worker\"",
		"db:postgres:seed": "bun run ./infra/seed/index.ts",
		"migrate:clickhouse": "bun run infra/clickhouse/scripts/migrate.ts migrate",
		"migrate:clickhouse:status": "bun run infra/clickhouse/scripts/migrate.ts status"
	},
	"dependencies": {
		"@bogeychan/elysia-logger": "^0.1.10",
		"@clickhouse/client": "^1.14.0",
		"@elysiajs/bearer": "^1.4.2",
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/jwt": "^1.4.0",
		"@elysiajs/openapi": "^1.4.12",
		"bcryptjs": "^3.0.3",
		"bullmq": "^5.65.1",
		"crypto-js": "^4.2.0",
		"dayjs": "^1.11.19",
		"dotenv": "^17.2.3",
		"drizzle-orm": "^0.45.1",
		"drizzle-seed": "^0.3.1",
		"elysia": "^1.4.18",
		"elysia-helmet": "^3.0.0",
		"elysia-rate-limit": "^4.4.2",
		"ioredis": "^5.8.2",
		"nodemailer": "^7.0.11",
		"pg": "^8.16.3",
		"pino": "^10.1.0",
		"pino-pretty": "^13.1.3"
	},
	"devDependencies": {
		"@types/bcrypt": "^6.0.0",
		"@types/bun": "^1.3.4",
		"@types/crypto-js": "^4.2.2",
		"@types/node": "^25.0.0",
		"@types/nodemailer": "^7.0.4",
		"@types/pg": "^8.16.0",
		"@typescript-eslint/eslint-plugin": "^8.49.0",
		"@typescript-eslint/parser": "^8.49.0",
		"bun-types": "^1.3.4",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.8",
		"eslint": "^9.39.1",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-prettier": "^5.5.4",
		"eslint-plugin-simple-import-sort": "^12.1.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"tsx": "^4.21.0",
		"typescript-eslint": "^8.49.0"
	},
	"type": "module",
	"private": true,
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"lint-staged": {
		"*.{js,ts,jsx,tsx}": [
			"eslint --fix",
			"prettier --write"
		]
	}
}
